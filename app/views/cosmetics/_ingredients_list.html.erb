<% if @cosmetic.ingredients.size >= 5 %>
  <div data-controller="expandable">
    <div class="row m-1" data-expandable-target="reviews">
      <% @cosmetic.ingredients.each do |ingredient| %>
        <li class="tag tag-green"><%= ingredient.name_en %></li>
      <% end %>
      <button class="button w-100" data-action="click->expandable#expand">See all ingredients!</button>
    </div>
  </div>
<% end %>
