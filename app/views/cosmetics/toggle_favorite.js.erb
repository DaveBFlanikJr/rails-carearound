
var cosmeticId = '<%= @cosmetic.id %>';

function toggleLikeButton(cosmeticId, favoritedCosmetic) {
  let likeButton = document.querySelector(`.like-icon[data-id='${cosmeticId}']`)
  likeButton.classList.toggle('red');
  if (likeButton.classList.contains('red')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedCosmetic)
  }
  else {
    document.querySelector(`.favorite[data-id='${cosmeticId}']`).remove()
  }
}

toggleLikeButton(cosmeticId, '<%= j render "cosmetics/cosmetic", cosmetic: @cosmetic %>');
