<h1>Cosmetics</h1>

<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="container">
    <h3>All cosmetics</h3>
      <% @cosmetics.each do |cosmetic| %>
       <%= render 'cosmetic', cosmetic: cosmetic %>
      <% end %>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6">
    <div class="container">
      <h3>Liked cosmetics</h3>
      <div class="favorites">
        <% @favorite_cosmetics.each do |cosmetic| %>
        <%= render 'cosmetic', cosmetic: cosmetic %>
        <% end %>
      </div>
    </div>
  </div>
</div>
