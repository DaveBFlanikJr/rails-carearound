<h1>Cosmetics</h1>

<div class="container">
  <%= @cosmetics.each do |cosmetic| %>
    <div class="col-12">
      <div class="cosme-card">
        <div class="cosme-card-header">
          <%= image_tag cosmetic.cosmetic_image, class: "img"%>
        </div>
        <div class="cosme-card-body">
          <span class="tag tag-teal"><%= cosmetic.category.capitalize %></span>
          <h3> <%= cosmetic.name %>
          </h3>
          <h4>from <%= cosmetic.brand.capitalize %></h4>
          <p>
            <%= cosmetic.description %>
          </p>
            <div class="price-info">
              <h5>Average price</h5>
              <small>Â¥<%= cosmetic.average_price %></small>
            </div>
          <%= link_to "See more", cosmetic_path(cosmetic), class:"btn btn-success"  %>
        </div>
      </div>
    </div>
  <% end %>
</div>
