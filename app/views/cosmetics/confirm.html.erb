<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-10">
    <h2 class="my-4" >Please confirm your product</h2>
      <%= simple_form_for :search, url: scan_path, method: "get" do |f| %>
        <%= f.input :cosmetic_image, as: :file, height: 200 %>
        <%= f.input :brand, input_html: {value: "#{@info[0].downcase.capitalize}"} %>
        <%= f.input :name, input_html: {value: "#{@info[1].downcase.capitalize}"} %>
        <%= f.input :description, input_html: {value: "#{@info[2].downcase.capitalize} #{@info[2].downcase.capitalize}"} %>
        <%= f.submit "Find your match", cosmetic_compare_path, class: "button" %>
      <% end %>
    </div>
  </div>
</div>

