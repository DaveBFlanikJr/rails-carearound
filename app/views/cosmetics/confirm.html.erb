<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-10">
    <h2 class="my-4" >Please confirm your product</h2>
    <%= @bob %>
      <tr>
          <td><%= cl_image_tag @cosmetic.cosmetic_image.key , alt: "alttext", style: "width: 200px" %></td>
      </tr>
      <h4>Add your Ingredient from the tag list or add your own.</h4>
      <% if policy(Cosmetic).update? %>
          <%= render 'layouts/tag_form' %>
        <% end %>
      <%= simple_form_for :cosmetic, method: "patch" do |f| %>
        <%= f.input :cosmetic_image, as: :file, height: 200 %>
        <%= f.input :brand, input_html: {value: "#{@info[0].downcase.capitalize}"} %>
        <%= f.input :name, input_html: {value: "#{@info[1].downcase.capitalize}"} %>
        <%= f.input :description, input_html: {value: "#{@info[2].downcase.capitalize}"} %>
        <%= f.input :category, collection: [["skincare"], ["lipcare"], ["eyecare"]] %>
        <%= f.submit class: "button" %>
      <% end %>
    </div>
  </div>
</div>

